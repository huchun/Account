<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/white"
    >
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:textSize="18sp"
	    android:textColor="#313131"
	    android:layout_marginTop="13dp"
	    android:text="已发送一条验证短信至"
	    android:id="@+id/title"
	    />
	
	<View android:layout_width="match_parent"
	    android:layout_height="0.7dp"
	    android:layout_marginTop="15dp"
	    android:background="@drawable/set_gray_line"
	    android:layout_below="@+id/title"
	    android:id="@+id/firstdivider"
	    />    
	<RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_below="@+id/firstdivider"
		android:id="@+id/vertify_container"
	    >
	    <EditText 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/vertify_edit"
	        android:textSize="18sp"
	        android:textColorHint="#CECECE"
	        android:hint="请输入短信验证码"
	        android:background="@null"
	        android:layout_centerVertical="true"
			android:layout_marginLeft="23.3dp"
			android:layout_marginRight="23.3dp"
			android:inputType="number"
	        />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="24.7dp"
	        android:gravity="center"
	        android:id="@+id/get_vertify"
	        android:text="重新获取"
	        android:textColor="#777777"
	        android:textSize="12sp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="13.3dp"
	        />
	    
	</RelativeLayout>    
	<View android:layout_width="match_parent"
	    android:layout_height="0.7dp"
	    android:background="@drawable/set_gray_line"
	    android:layout_below="@+id/vertify_container"
	    android:id="@+id/seconddivider"
	    />    
	    
	<Button 
	    android:layout_width="match_parent"
	    android:layout_height="37.7dp"
	    android:id="@+id/vertify_bt"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="24.7dp"
	    android:layout_marginLeft="47.3dp"
	    android:layout_marginRight="47.3dp"
	    android:text="验证"
	    android:textColor="@android:color/white"
	    android:textSize="16sp"
	    android:background="@drawable/selector_btn_code"
	    
	    />
    
</RelativeLayout>